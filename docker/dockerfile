FROM jupyter/base-notebook
MAINTAINER yutiansut 'yutiansut@qq.com'

RUN apt update
# 修改docker的时区
RUN apt install tzdata
RUN cp /usr/share/zoneinfo/Asia/Shanghai  /etc/localtime

RUN pip install pip -U -i https://pypi.doubanio.com/simple
RUN pip install -r https://raw.githubusercontent.com/yutiansut/QUANTAXIS/master/requirements.txt -i https://pypi.doubanio.com/simple
RUN pip install tushare
RUN pip install pytdx
RUN pip install quantaxis
# RUN cd /root && nohup sh ./startmongod.sh &
#RUN cd /root/quantaxis/QUANTAXIS_Webkit/backend && forever start ./bin/www
#RUN cd /root/quantaxis/QUANTAXIS_Webkit/web && forever start ./build/dev-server.js


EXPOSE 8888
